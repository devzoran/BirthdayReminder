<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dropdown_item_pressed" />
        </shape>
    </item>
    
    <!-- 选中状态 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dropdown_item_selected" />
        </shape>
    </item>
    
    <!-- 悬停状态 -->
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dropdown_item_hovered" />
        </shape>
    </item>
    
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dropdown_item_normal" />
        </shape>
    </item>
    
</selector>
