<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 外层阴影 -->
    <item android:top="2dp" android:left="3dp" android:right="3dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#06000000" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    
    <!-- 内层阴影 -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#08000000" />
            <corners android:radius="17dp" />
        </shape>
    </item>
    
    <!-- 主卡片层 -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_background" />
            <corners android:radius="16dp" />
            <stroke 
                android:width="0.3dp" 
                android:color="#10000000" />
        </shape>
    </item>
    
</layer-list>
