<?xml version="1.0" encoding="utf-8"?><!--
   Sample backup rules file; uncomment and customize as necessary.
   See https://developer.android.com/guide/topics/data/autobackup
   for details.
   Note: This file is ignored for devices older than API Level 23 and
   instead uses the value of android:allowBackup only.
-->
<full-backup-content xmlns:tools="http://schemas.android.com/tools">
    <!-- TODO: Use <include> and <exclude> to control what is backed up.
        <include domain="file" path="dd"/>
        <exclude domain="file" path="dd/fo3o.txt"/>
        <exclude domain="file" path="dd/ss/foo.txt"/>
    -->
    
    <!-- Include the birthday database for backup -->
    <include domain="database" path="birthday_database"/>
    
    <!-- Exclude any temporary or cache files -->
    <exclude domain="file" path="cache"
        tools:ignore="FullBackupContent" />
    <exclude domain="file" path="tmp"
        tools:ignore="FullBackupContent" />
</full-backup-content>
