<?xml version="1.0" encoding="utf-8"?>
<com.birthday.reminder.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/list_item_container_background"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- 删除按钮背景（红色） -->
    <View
        android:id="@+id/deleteBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/delete_button_background"
        android:visibility="gone" />

    <!-- 删除按钮 -->
    <TextView
        android:id="@+id/deleteButton"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/delete_button_background"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone" />

    <!-- 原始卡片内容 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/card_content_background"
        android:clipToPadding="false">

        <!-- 左侧头像圆形背景 -->
        <ImageView
            android:id="@+id/imageViewAvatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/primary_light_pink"
            android:tint="@color/primary_warm_pink"
            android:padding="12dp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 姓名 -->
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="张三"
            android:textColor="@color/text_primary_dark"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toStartOf="@+id/textViewAge"
            app:layout_constraintStart_toEndOf="@+id/imageViewAvatar"
            app:layout_constraintTop_toTopOf="@+id/imageViewAvatar" />

        <!-- 年龄标签 -->
        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25岁"
            android:textColor="@color/secondary"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/age_badge_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageViewAvatar" />

        <!-- 关系标签 -->
        <TextView
            android:id="@+id/textViewRelationship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="父亲"
            android:textColor="@color/text_secondary_gray"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_family"
            android:drawableTint="@color/primary"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@+id/imageViewAvatar"
            app:layout_constraintTop_toBottomOf="@+id/textViewName" />

        <!-- 分隔线 -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/divider_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewAvatar" />

        <!-- 生日日期 -->
        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="公历 1998-05-15"
            android:textColor="@color/text_primary_dark"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_calendar"
            android:drawableTint="@color/secondary"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toStartOf="@+id/layoutDaysUntil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <!-- 倒计时布局 -->
        <LinearLayout
            android:id="@+id/layoutDaysUntil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/days_until_background_light"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewDate">
            
            <TextView
                android:id="@+id/textViewDaysUntil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.05" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天后"
                android:textColor="@color/text_secondary_gray"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1" />
            
        </LinearLayout>

        <!-- 备注信息 -->
        <TextView
            android:id="@+id/textViewNotes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="备注信息"
            android:textColor="@color/text_hint_light"
            android:textSize="13sp"
            android:fontStyle="italic"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDate" />

        <!-- 提醒开关 -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="提醒开启"
            android:textSize="13sp"
            android:textColor="@color/switch_text_color"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/switch_track_color"
            app:trackTintMode="src_atop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutDaysUntil" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</com.birthday.reminder.SwipeRevealLayout>
