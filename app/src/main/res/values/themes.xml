<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BirthdayReminder" parent="Theme.Material3.DayNight">
        <!-- Primary brand color - iOS蓝色系 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimaryContainer">@color/text_primary_dark</item>
        
        <!-- Secondary brand color - iOS绿色系 -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>
        <item name="colorOnSecondaryContainer">@color/text_primary_dark</item>
        
        <!-- Background colors - iOS风格 -->
        <item name="android:colorBackground">@color/background_soft</item>
        <item name="colorSurface">@color/surface_cream</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorSurfaceVariant">@color/surface_light_pink</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_gray</item>
        
        <!-- Other colors -->
        <item name="colorError">@color/error_soft_red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOutline">@color/divider_light</item>
        
        <!-- Status bar color - iOS风格 -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar - iOS风格 -->
        <item name="android:navigationBarColor">@color/surface_cream</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="Theme.BirthdayReminder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BirthdayReminder.AppBarOverlay" parent="ThemeOverlay.Material3.Dark">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.BirthdayReminder.PopupOverlay" parent="ThemeOverlay.Material3.Light" />
    
    <!-- iOS风格弹框样式 -->
    <style name="Theme.BirthdayReminder.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.Title.iOS</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialog.Body.iOS</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.iOS.Dialog</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
    </style>
    
    <!-- iOS风格弹框标题样式 -->
    <style name="AlertDialog.Title.iOS" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- iOS风格弹框内容样式 -->
    <style name="AlertDialog.Body.iOS" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary_gray</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <!-- iOS风格弹框圆角 -->
    <style name="ShapeAppearance.iOS.Dialog" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- iOS风格按钮样式 -->
    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/button_secondary</item>
        <item name="android:textColor">@color/button_secondary</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- iOS风格卡片样式 -->
    <style name="Card.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">1dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>
